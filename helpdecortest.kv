#:kivy 2.0.0
#:import platform kivy.utils.platform

<Telamenus>
    Menu:
        name: 'menu'
    Menucliente:
        name: 'menucliente'
    Menupeca:
        name: 'menupeca'
    Cadastrocliente:
        name: 'cadastrocliente'
    Cadastropeca:
        name: 'cadastropeca'
    Escolherfoto:
        name: 'escolherfoto'
    Locacao:
        name: 'locacao'
    Gerarlocacao:
        name: 'gerarlocacao'


# <-----------------------MENU PRINCIPAL------------------------------>
<Menu>
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 5
#        canvas:
#            Color:
#                rgba: 1,1,1,1
#            Rectangle:
#                size: self.size
#                pos: self.pos
#                source: 'imagens/fundo.jpg'

        Image:
            source: 'imagens/helpdecor.png'
            size_hint_y: None
            height: 100
            allow_stretch: True
        Botao:
            text: 'Clientes'
            size_hint_y: None
            height: 60
            on_release: app.root.current = 'menucliente'
        Botao:
            text: 'Festas'
            size_hint_y: None
            height: 60
        Botao:
            text: 'Peças de decoração'
            size_hint_y: None
            height: 60
            on_release: app.root.current = 'menupeca'
        Botao:
            text: 'Fornecedores'
            size_hint_y: None
            height: 60
        BoxLayout:
            orientation: 'horizontal'
            spacing: 5
            Botao:
                text: 'Fechar'
                size_hint_y: None
                height: 40
                on_release: app.stop()
                cor: 0.8,0.6,0.7,1
            Image:
                source: 'imagens/logo5.jpeg'
                size_hint_y: None
                height: 40
                allow_stretch: True
            Label:
                text: 'V0.1.6'
                size_hint_y: None
                height: 40
                color: 'green'



# <-----------------------MENU DE CLIENTES------------------------------>
<Menucliente>
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 5
        Botao:
            text: 'Cadastrar Cliente'
            size_hint_y: None
            height: 60
            on_release: app.root.current = 'cadastrocliente'
        Botao:
            text: 'Voltar'
            size_hint_y: None
            height: 60
            on_release: app.root.current = 'menu'


# <-----------------------MENU DE PEÇAS------------------------------>
<Menupeca>
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 5
        Botao:
            text: 'Locação'
            size_hint_y: None
            height: 60
            on_release: app.root.current = 'locacao'
        Botao:
            text: 'Cadastrar Peças'
            size_hint_y: None
            height: 60
            on_release: app.root.current = 'cadastropeca'
        Botao:
            text: 'Voltar'
            size_hint_y: None
            height: 60
            on_release: app.root.current = 'menu'


# <-----------------------TELA DE CADASTRO CLIENTES------------------------------>
<Cadastrocliente>
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Cadastro de Clientes'
                    on_release: app.root.current = 'menucliente'
        ScrollView:
            BoxLayout:
                id: boxcadcliente
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height

        BoxLayout:
            size_hint_y: None
            height: 60
            TextInput:
                id: cadastrocli
            Button:
                text: '+'
                size_hint_x: None
                weight: 30
                on_release: root.adicionarcliente()


# <-----------------------TELA DE CADASTRO PEÇAS------------------------------>
<Cadastropeca>
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Cadastro de Peças'
                    on_release: app.root.current = 'menupeca'
        ScrollView:
            BoxLayout:
                id: boxcadpeca
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height

# TITULO DO FORMULARIO DE CADASTRO DE PEÇAS
        BoxLayout:
            size_hint_y: None
            height:30
            Label:
                text: 'Img'
                font_size: 10
                size_hint: None, None
                size: 30, 30
            Label:
                text: 'Descrição'
                font_size: 10
            Label
                text: 'Qtd'
                font_size: 10
                size_hint: None, None
                size: 30, 30
            Label:
                text: 'Add'
                font_size: 10
                size_hint: None, None
                size: 30, 30

#FORMULARIO DE CADASTRO DE PEÇAS
        BoxLayout:
            size_hint_y: None
            height: 60
            Button:
                text: '+'
                size_hint: None, None
                size: 30, 60
                on_release: app.root.current = 'escolherfoto'
            TextInput:
                id: cadastropec
            TextInput:
                id: quantidadepec
                size_hint: None, None
                size: 30, 60
            Button:
                text: '+'
                size_hint: None, None
                size: 30, 60
                on_release: root.adicionarpeca()

# <-----------------------TELA DE LOCAÇÃO
<Locacao>
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 5
        Botao:
            text: 'Gerar Nova Locação'
            size_hint_y: None
            height: 60
    #        on_release: app.root.get_screen('gerarlocacao').adicionarlocacao()
            on_release: app.root.current = 'gerarlocacao'
        Botao:
            text: 'Voltar'
            size_hint_y: None
            height: 60
            on_release: app.root.current = 'menupeca'

# <-----------------------TELA GERAR LOCAÇÃO
<gerarlocacao>
    BoxLayout:
        orientation: 'horizontal'
        #size: root.width, root.height
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 300, root.height
            Label:
                id: click_label
                text: 'Selecione a peça'
                size_hint: None, None
                size: 150, 10

            Spinner:
                id: spinner_id
                text: 'Peça'
                size_hint: None, None
                size: 150, 20
                values: ['Vaso Rosa Grande', 'Vaso Preto Grande', 'Vaso Verde Grande', 'Vaso Azul Grande', 'Vaso Cinza Grande', 'Vaso Cinza Grande', 'Vaso Cinza Grande', 'Vaso Cinza Grande', 'Vaso Cinza Grande', 'Vaso Cinza Grande', 'Vaso Cinza Grande']

                on_text: root.spinner_clicked(spinner_id.text)
            Label:
                text: ''
                size_hint: None, None
                size: 150, 150
        BoxLayout:
            Label:
                text: 'Aqui será feito o pdf'
            Botao:
                text: 'Gerar PDF'
                size_hint: None, None
                size: 150, 20
                on_release: root.gerarpdf()



# <-----------------------WIDGET COM O CADASTRO DO CLIENTE------------------------------>
<AddCadCliente>
    size_hint_y: None
    height: 60
    Label:
        id: rotulocadcliente
    Button:
        text: 'x'
        size_hint_x: None
        weight: 30
        on_release:app.root.get_screen('cadastrocliente').removerCadastro(root)


# <-----------------------WIDGET COM O CADASTRO DA PEÇA------------------------------>
<AddCadPeca>
    size_hint_y: None
    height: 60
    BoxLayout:
        orientation: 'vertical'
        id: mudarposicao
        size_hint: None, None
        size: 30, 60
#        weight: self.minimum_weight
        spacing: 0
        Button:
            id: sobeposicao
            text: '^'
            on_release: app.root.get_screen('cadastropeca').sobeposicao(root)
        Button:
            id: desceposicao
            text: 'v'
            on_release: app.root.get_screen('cadastropeca').desceposicao(root)
    Label:
        id: uniquepeca
        size_hint: None, None
        size: 30, 60
        font_size: 10
        spacing: 0

# BOTÃO PARA POPUP DA IMAGEM DA PEÇA
    Button:
        background_normal: ''
        border: 0,0,0,0
        id: imagem_popup
        size_hint: None, None
        size: 40, 60
        on_release: root.aumentarfoto()
        spacing: 0
    Label:
        id: rotulocadpeca
        font_size: 12
        spacing: 0
    Label:
        id: rotuloqtdpeca
        size_hint: None, None
        size: 30, 60
        font_size: 12
        spacing: 0
    Button:
        text: 'x'
        size_hint: None, None
        size: 30, 30
        on_release:app.root.get_screen('cadastropeca').removerCadastro(root)

# <-----------------------TELA DE SELEÇÃO DE IMAGEM DAS PEÇAS------------------------------>
<Escolherfoto>

    BoxLayout:
        orientation: 'vertical'
        id: my_foto

        FileChooserIconView:
            rootpath: '/storage/emulated/0/' if platform == 'android' else '/'
            id: filechooser
            on_selection: root.selecionar(filechooser.selection)
        Image:
            id: imagempeca
            source: ''
        Button:
            id: botaook
            text: 'Escolher'
            size_hint_x: None
            size_hint_y: None
            weight: 30
            height: 30
            on_release: app.root.current = 'cadastropeca'



